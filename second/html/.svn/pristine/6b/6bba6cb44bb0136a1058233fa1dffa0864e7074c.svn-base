.swiper-pagination-fraction,
.swiper-pagination-custom,
.swiper-container-horizontal > .swiper-pagination-bullets{
	width: 15rem ;
	right: 50% ;
	margin-right: -7.5rem ;
	text-align: center ;
}
.swiper-pagination-bullet{
    margin: 0 0.1rem ;
    width: 1rem ;
    height: 2px ;
    display: inline-block ;
    border-radius: 0% ;
    border: 0px ;
    opacity: 0.8 ;
    background: #e5e5e5;
}
.swiper-pagination-bullet-active {
    opacity: 1 ;
    background: #ff7699 ;
}
