</html>
<script>
    var param = new Arguments();
    var urlParam = param.Request();
    var AllFilter={};//用来存多条件筛选之后的结果
    var shop_type;
    var userid = 2;
    var username = 'lalala';
    $(function()
    {
        if(urlParam.from == 'dinzhi')
        {
            $("#filInfo").hide();
            $("#info").removeClass('position-relative-ss');
            shop_type = 3;
        }
        if(urlParam.filterType == 2)
        {
            $(".header-btn-a>a").text('官方店');
            $("#searchType").val(2);
        }
    })

    $("#choose").on('click', function () {
        $("#content").hide();
        $(".shaixuan").show();
        filter()
    })
    function IndexList(obj,param)
    {
        //筛选导航
        var url = '/tongrenmiao/index.php?g=Mall&m=Index&a=search';
        var data = {};
        if(urlParam.shopId)
        {
            data['shoid'] = urlParam.shopId;
        }
        if(urlParam.from == 'dinzhi')
        {
            data['shop_type'] = shop_type
        }
        else
        {
            if(param)
            {
                AllFilter = param;
                data['shaixuan'] = AllFilter;
            }

            if(obj)
            {
                data['filterType'] = $(obj).attr('data-val');
            }
            data['search_type']=$("#searchType").val();
            data['userid'] = userid;
        }
        data['name'] = $('#info').val().trim();
        $.ajax({
            url:url,
            data:data,
            type:'get',
            dataType:'json',
            beforeSend:function()
            {

            },
            success:function(res)
            {
                $(".shaixuan").hide();
                $("#content").show();
                if(res.Info.length>0)
                {
                    handleHtml(res,shop_type);
                }
                else
                {
                    $("#filter").hide();
//                    if(shop_type == 3)
//                    {
//                        $("#content").html('没有找到相应的定制厂');
//                        $("#content").css({'color':'gray','padding-top':'20%','font-size':'0.8rem'});
//                    }
//                    else
//                    {
//
//                    }
                    $("#contentInfo").html('没有找到该商品');
                    $("#contentInfo").css({'color':'gray','padding-top':'20%','font-size':'0.8rem'});
                }
            },
            error:function()
            {

            }
        })
    }

    function handleHtml(list,shop_type)
    {
        var str = '';
        if(shop_type == 3)
        {
            $.each(list.Info,function(k,v){
                str += '<div class="custom-search part middle-bottom" >\
                            <a href="shangye-yinshua.html?shopId='+v.id+'"><img src="'+v.logo+'">\
                                <div class="custom-bg"></div>\
                                <div class="custom-info vertical-center">\
                                    <p class="custom-i-name">'+v.company+'</p>\
                                    <p class="custom-i-text">'+v.main_pro+'</p>\
                                </div>\
                            </a>\
                        </div>';
            })
            $("#content").removeAttr('style');
            $("#content").html(str);
        }
        else
        {
            $.each(list.Info,function(k,va)
            {
                if(list.type)
                {
                    //同人铺只显示商铺信息
                    str += '<div class="store-search part clearfix">\
                            <div class="store-box clearfix">\
                                <div class="store-img">\
                                    <a href="shangye_xiangqi.html?shopId='+va.userid+'"><img src="'+va.logo+'" alt=""></a>\
                                </div>\
                                <div class="store-info">\
                                    <p class="store-i-name">'+va.company+'</p>\
                                    <p class="store-i-text">关注人数 '+va.shop_collect+'</p>\
                                    <p class="store-i-text">全部宝贝 '+va.allbaby+'</p>\
                                </div>'
                    if(va.collectStatus == 1)
                    {
                        str += '<div class="store-up" ><a onclick="isCollect(this)" class="btn-color" href="javascript:" data-id="' + va.userid + '">收 藏</a></div>'
                    }
                    else
                    {
                        str += '<div class="store-up" ><a onclick="isCollect(this)" href="javascript:" data-id="' + va.userid + '">收 藏</a></div>'
                    }
                    str += '</div>\
                            <div class="store-box clearfix">\
                                <ul class="sale-ones clearfix">'
                    if(list.type == 2)
                    {
                        //商业店加每家店的三件最新商品显示
                        $.each(va.product,function(k,v)
                        {
                            str += '<li><div class="sale-ones-front"><p class="sale-of-img"><a href="detail-page1.html?id='+v.id+'"><img src="'+v.pic+'"></a></p></div></li>';
                        })
                    }
                    str +='	</ul></div>	</div>';
                    $("#filter").hide();
//                    isCollect()
                }
                else
                {
                    //商品
                    str += '<li>\
                        <div class="sale-ones-front tie">\
                            <p class="sale-of-img"><a href="detail-page1.html?id='+va.id+'"><img src="'+va.pic+'"></a></p>\
                            <p class="sale-of-name">'+va.name+'</p>\
                            <p class="sale-of-text">'
                    if(va.original)
                    {
                        str += '<span>原作:'+va.original+'</span>'
                    }
                    if(va.circlename)
                    {
                        str += '<span>CP圈:'+va.circlename+'</span>'
                    }
                    str +='</p><p class="sale-of-price">￥'+va.price+'</p>\
                        </div>\
                    </li>'
                    $("#filter").show();
                }
            })
            $("#contentInfo").html(str);
            $("#contentInfo").removeAttr('style');

        }
    }

    function isCollect(obj)
    {
        var data = {};
        data['collect'] = $(obj).hasClass('btn-color') ? 0 : 1;
        data['userid'] = userid;
        data['uname'] = username;
        data['shopid'] = $(obj).attr('data-id');
        data['shopname'] = $(obj).parents('.store-up').siblings('.store-info').find('.store-i-name').text();
        $.ajax({
            url:"/tongrenmiao/index.php?g=Mall&m=index&a=isCollect",
            data:data,
            dataType:'json',
            type:'get',
            beforeSend:function()
            {

            },
            success:function(data)
            {
                if(data.collect == '0')
                {
                    //取消收藏
                    alertInfo('收藏已取消');
                }
                else
                {
                    alertInfo('已收藏');
                }
                $(obj).toggleClass('btn-color');

            },
            error:function()
            {

            }
        })
    }

    function alertInfo(mes)
    {
        var phone2 = $('#cpp2').MiaoDialog();
        phone2.MiaoDialog('open');
        $('#cpp2').find('p').text(mes);
        setTimeout(function(){
            phone2.MiaoDialog('close');
        },1400);
    }

</script>