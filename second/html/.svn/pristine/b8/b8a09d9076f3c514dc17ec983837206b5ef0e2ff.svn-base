			$(".footer-pop-ups-blackground").css('display','block');
			$(".footer-pop-ups").slideDown();
		}
		else{

		}
	});
	$('.foot-right').on('click','a', function(event) {
		if( $(".footer-pop-ups").css('display') == 'none' ){
			$(".footer-pop-ups-blackground").css('display','block');
			$(".footer-pop-ups").slideDown();
		}
		else{

