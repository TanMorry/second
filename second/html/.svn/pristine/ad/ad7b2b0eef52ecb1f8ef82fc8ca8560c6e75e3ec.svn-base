@charset "utf-8";

*{
	margin:0;
	padding:0;
	list-style:none;
}

html,body{font-size:125%;height:100%;}

html{
	width: 100%;
	height: 100%;
	-webkit-font-smoothing:antialiased;
}
body{
	text-align:center;
	-webkit-user-select:none;
	-webkit-text-size-adjust:100%;
	word-break:break-all;
	color: #000;
	font-family:"Microsoft YaHei","黑体","Helvetica Neue",Helvetica,STHeiTi,sans-serif;
	background:#e5e5e5;
}

i, em, b {
	font-style:normal;
	font-weight:normal;
}
img{
	width:100%;
	vertical-align:top;
}
input,a,span{
	-webkit-tap-highlight-color: rgba(0,0,0,0);
}
input,textarea,select{
	-webkit-appearance:none;
	font-size:0.9rem;
	border:0;
	background: transparent;
	font-family:"Microsoft YaHei","黑体","Helvetica Neue",Helvetica,STHeiTi,sans-serif;
	outline:none;
}
input[type=radio]{-webkit-appearance:radio;}

a{text-decoration:none;}
a:link{text-decoration:none;}
a:hover{text-decoration:none;}
a:active{text-decoration:none;}
a:visited{text-decoration:none;}

::-webkit-textarea-placeholder {color:#ccc;}
:-ms-textarea-placeholder {color:#ccc;}

/*flex布局*/
.flex{
	display:-webkit-box;
	-webkit-box-orient:vertical;
	height:100%;
}
.flex .content{
	-webkit-box-flex:1;
	-webkit-flex:1;
	-ms-flex:1;
	flex:1;
	overflow:auto;
	-webkit-overflow-scrolling:touch;
	position:relative;
	z-index: 1;
}

.header{
	position: relative;
	z-index: 10;
}
.footer{
	background: #fff;
	overflow: hidden;
}

.clear{
	width: 0;
	height: 0;
	clear:both !important;
}
.clearfix:after{
	content:" ";
	display:block;
	width:0;
	height:0;
	clear:both;
	visibility:hidden;
}
.none{
	display:none !important;
}
.hide{
	display:none;
}
.hidden{
	visibility:hidden !important;
}
/*垂直对齐*/
.vertical-center{
	display:-webkit-box !important;
	-webkit-box-orient:vertical; 
	-webkit-box-pack:center; 
	-webkit-box-align:center;
}
.vertical-center>*{
	display: block;
}
/*水平居中*/
.horizontal-center{
	display:-webkit-box !important;
	-webkit-box-orient:horizontal; 
	-webkit-box-pack:center; 
	-webkit-box-align:center;
}
.horizontal-center>*{
	display: block;
}
/*文本超出一行...*/
.text-clamp-one {
	display: -webkit-box;
	-webkit-line-clamp: 1;
	-webkit-box-orient: vertical;
	overflow: hidden;
}
.header-dz{font-size: 0.8rem;color: #ffffff}
.content{background: #ffffff}


.love-btn{position: relative}
.love-btn-tc{position:absolute;width: 100%;left: 0;top:2rem;height: 2rem;background: red;z-index:100 }