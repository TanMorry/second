.content-top{border-top:0.2rem solid #e5e5e5;border-bottom:0.2rem solid #e5e5e5;}
.header-c-color{font-size: 0.9rem;color: #FFFFFF}
.header-r-color{font-size:0.6rem;color: #FFFFFF }
.commodity{display: -webkit-box;height: 1.8rem;line-height: 1.3rem;font-size: 0.8rem;padding:0.4rem 0.3rem 0   0.3rem;
  border-bottom:1px solid #e5e5e5}
.commodity-l{text-align: left;-webkit-box-flex: 1;white-space: normal;}
.commodity-l-btn{height: 0.7rem;width: 0.7rem;padding:0.1rem;border:1px solid #eb6877;border-radius:0.5rem;
    float: left;margin-top: 0.1rem}
.commodity-l-btn.true div{height: 0.6rem;width: 0.6rem;;background:#eb6877;margin:0.05rem auto;border-radius: 0.35rem ;
}
.border{border-bottom:1px solid  #bcb5b5}
.commodity-l-p{color: #777777; }
.commodity-l-p span{color:#00baff;padding: 0 0.5rem;}
.commodity-l-p img{height:0.6rem;width: 0.4rem;vertical-align: middle;}
.commodity-r{text-align:right;-webkit-box-flex: 1;white-space: normal;box-sizing: border-box}
.commodity-r span{font-size: 0.8rem;color:#eb6877 }
.content-choice{padding: 1rem  0.3rem;overflow: hidden}
.content-choice-c>p{width: 4rem;height: 4rem;padding: 0 0.5rem}
.content-choice-c>p img{width: 100%;height: 100%;border: 1px solid #777777}
.content-choice-l,.content-choice-c,.content-choice-w{float: left}

.commodity-r-money{margin-top:2.5rem;}

.content-choice-l{margin-top: 1.3rem}
.content-choice-w p{text-align: left;}
.content-choice-p{padding-bottom: 0.5rem}
.choice-w-one{font-size: 0.7rem;color:#777777 }
.choice-w-two{font-size: 0.5rem;color:#d0d0d0 }
.choice-w-three{float: left;}
.choice-w-three >a{font-size:1rem;background: #ffffff;;color: #cbcaca;display: block;
    border: 1px solid #cbcaca;-webkit-border-radius:0.3rem;font-weight: bold;height: 1.2rem;width: 1.2rem;
    text-align: center;line-height: 1rem;float: left}
.choice-w-three input{height:1.2rem;width:2.5rem;border: 1px solid #cbcaca; float: left;margin:0 0.3rem;text-align: center;font-size: 0.7rem;
color:#777777;-webkit-border-radius:0.3rem;line-height: 1.2rem}
.content-choice-r{float: right;}
.sp-a{width:7.5rem;max-width: calc(100% - 1rem);height:1rem;margin: 0 0.5rem;background: url(../img/xihuan.png) 0 0 no-repeat;
    background-size: contain;}
.foot-top{padding-left: 0.5rem;;border-top: 1px solid #bcb5b5;height: 2rem;
  display: -webkit-box;-webkit-box-pack:justify;-webkit-box-align: center}
.foot-top-l .foot-btn{height:1rem;width:1rem;background: #FFFFFF;border: 1px solid #bcb5b5;float: left;margin-top: 0.35rem;
  border-radius: 0.35rem}
.foot-top-l .true{background:url("../img/quanxuan.png")0  0 no-repeat;background-size: cover; }
.foot-top-l span{font-size: 0.9rem;color:#8c8b8b;margin-left: 0.5rem }
.font--r-r p:first-child{font-size: 0.7rem;color:#777777 }
.font--r-r p:last-child{font-size: 0.6rem;color:#c9c9c9 }
.font--r-r{margin-right: 0.5rem}
.foot-top-r p{;text-align: right}
.font--r-f{text-align: center}
.font--r-f a{display: block;font-size: 0.8rem;color: #FFFFFF;background:#eb6877;height:2rem;line-height: 2rem;padding: 0 0.5rem}
.font--r-r,.font--r-f{float: left}

.content-choice{position: relative}
.content-delete{position: absolute;width:100px;height: 6rem;top:0;right:-100px;background:#959595 ;
font-size: 0.9rem;color: #FFFFFF;line-height: 6rem;text-align: center;-webkit-transform: translateX(0px)}