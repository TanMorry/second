<script>
	$(function(){
		IndexList();
	})
	function IndexList()
	{
		var url = "/tongrenmiao/index.php?g=Mall&m=index&a=main";
		$.ajax({
			url:url,
			data:{},
			dataType:'json',
			type:'post',
			beforeSend:function()
			{
				$("#wrapper").hide();
				$("#searchHead").hide();
				$("#loading").show();
				$('body').addClass('loading');
			},
			success:function(ret)
			{
				var newProduct = "";
				var moods = "";
				var sales = "";
				if(ret.maxSales == "" || ret.moods == "" || ret.new == "")
				{
					location.href = 'error.html?status=2';
				}
				else
				{
					$.each(ret.new,function(key,val)
					{
						newProduct +='<li>\
										<div class="sale-ones-front" >\
											<p class="sale-of-img"><a href="detail-page1.html?id='+val.id+'"><img src="'+val.pic+'"></a></p>\
											<p class="sale-of-name">'+val.name+'</p>\
											<p class="sale-of-price">'+val.price+'</p>\
										</div>\
									</li>'
					});
					$.each(ret.moods,function(key,val)
					{
						moods +='<li>\
									<div class="sale-ones-front">\
										<p class="sale-of-img"><a href="detail-page1.html?id='+val.id+'"><img src="'+val.pic+'"></a></p>\
										<p class="sale-of-name">'+val.name+'</p>\
										<p class="sale-of-text">原著:伪装者</p>\
										<p class="sale-of-text">CP圈:楼城</p>\
										<p class="sale-of-price">'+val.price+'</p>\
									</div>\
								</li>'
					});
					$.each(ret.maxSales,function(key,val)
					{
						sales +='<li>\
									<div class="sale-ones-front tie">\
										<p class="sale-of-img"><a href="detail-page1.html?id='+val.id+'"><img src="'+val.pic+'"></a></p>\
										<p class="sale-of-name">'+val.name+'</p>\
										<p class="sale-of-price">'+val.price+'</p>\
									</div>\
								</li>'
					});
					$("#newProduct").html(newProduct);
					$("#moods").html(moods);
					$("#sales").html(sales);
					$("#wrapper").show();
					$("#searchHead").show();
					$("#loading").hide();
					$('body').removeClass('loading');
					wrapper.refresh();
				}
			}
//			error:function()
//			{
//				location.href = 'error.html?status=2'
//			}
		})
	}
</script>
<script>
	refresher.init({
		id: "wrapper",
		header: true,
		footer: true,
		pullDownAction: Refresh,
		pullUpAction: Load,

		timeout: null,
		start:function(e){
			clearTimeout(this.timeout);
			this.timeout = setInterval(functionScroll, 33);
		},
		end: function() {
			clearTimeout(this.timeout);
		}
	});
	function functionScroll( positionSwiper ){
		var positionSwiper = $('#wrapper .scroller').position().top * -1 -40;
		var changeY = ( $('.swiper-container').height() - $('.header').height() ) ;
		if ( changeY && positionSwiper <=  changeY ){
			var opacityMask ;
			var opacityHeader ;
			opacityMask = positionSwiper / changeY ;
			$('.header-bg').css('background','rgba(235,104,119,' + opacityMask + ')');
		}
		else {
			$('.header-bg').css('background','rgba(235,104,119,1)');
		}

	}

	function Refresh() {
		setTimeout(function () {
			wrapper.refresh();
			IndexList();
		}, 500);
	}

	function Load() {
		setTimeout(function () {
			monthMaxSalesOrder();
			wrapper.refresh();
		}, 500);
	}
	$page = 1;
	function monthMaxSalesOrder()
	{
		$.ajax({
			url:'/tongrenmiao/index.php?g=mall&m=index&a=monthMaxSalesOrder',
			data:{'page':$page,'more':1},
			type:'get',
			dataType:'json',
		}).done(function(ret)
		{
			if(ret.maxSales.length >0)
			{
				var sales = "";
				$.each(ret.maxSales,function(key,val)
				{
					sales +='<li>\
								<div class="sale-ones-front tie">\
									<p class="sale-of-img"><a href="detail-page1.html?id='+val.id+'"></a><img src="'+val.pic+'"></p>\
									<p class="sale-of-name">'+val.name+'</p>\
									<p class="sale-of-price">'+val.price+'</p>\
								</div>\
							</li>';
				});
				$("#sales").append(sales);
				wrapper.refresh();
			}
			else
			{
				$(".pullUpLabel").html("没有更多数据");
			}
		})
		$page++;
	}
</script>